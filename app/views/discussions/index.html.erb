
<div class="row">
  <%= link_to "Post a Smack Talk Topic", new_discussion_path, method: :get, :class => "btn btn-primary col-md-6 col-md-offset-3" %>
</div>
<p>
<div class="panel-group" id="accordion_recent_topics">
  <div class="panel panel-default">
      <div class="panel-heading text-center">
        <i class="fa fa-hand-paper-o"></i><i class="fa fa-bullhorn"></i> <strong>SMACK TALK</strong>
      </div>
    <div id="recent_topics" class="panel-collapse collapse in">
      <table class="table table-hover table-striped">
        <thead>
        	<tr>
        		<th class="col-md-5">Title</th>
        		<th class="col-md-1">Replies</th>
            <th class="col-md-2">Author</th>
        		<th class="col-md-4 hidden-xs ">Latest Activity: </th>
        	</tr>
        </thead>
        <tbody>
          <% @discussions.order('created_at DESC').each do |b| %>
            <tr>
              <td class="col-md-5">
                <strong><%= link_to "#{b.title}", discussion_path(b), method: :get %></strong>
              </td>
              <td class="col-md-1">
                <span class="badge"> <%= b.comments.count %> </span>
              </td>
              <td class="col-md-2 ">
                <%= link_to "#{b.user.user_name}", user_path(b.user_id), method: :get %>
              </td>
              <td class="col-md-4 hidden-xs">

                 <% if b.comments.count > 0 %>
                  <%= b.comments.last.user.user_name %> commented at <%= b.comments.last.created_at.strftime(" %m/%e/%y, %H:%M %p") %>
                 <% elsif %>
                  Smack Talk started at <%= b.created_at.strftime(" %m/%e/%y %H:%M %p") %>
                 <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="panel-footer clearfix">
      <div class="pull-right">
        &nbsp;
      </div>
    </div>
  </div>
</div>
