<div class="panel panel-default" id="a9" >
	<div class="panel-heading">
		<div class="text-center panel-title">
        <h4>New Comment</h4>
    </div>
	</div>
	<div class="panel-body thread-row">
		<div class="row thread-row">
			<div class="col-xs-12 visible-xs-block">
				<div class="clerafix top-border">&nbsp;</div>
			</div>
			<div class="col-md-8 col-md-offset-2">
          <%= bootstrap_form_for [@discussion, @comment], :url => post_comment_path do |f| %>
            <%= f.text_area :content, :length=>"500", :placeholder=>"Content" %>
            <%= f.submit "Submit", :class=>"btn btn-primary" %>
          <% end %><br />
			</div>
		</div>
	</div>
	<div class="panel-footer clearfix">
		<div class="pull-right">
			&nbsp;
		</div>
	</div>
</div>
